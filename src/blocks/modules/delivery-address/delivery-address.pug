mixin delivery-address()
  .b-delivery-address.iblock&attributes(attributes)
    ul.b-delivery-address__items
      li.b-delivery-address__item
        .b-delivery-address__field
          .b-delivery-address__field-label Сохраненные адреса
          .b-delivery-address__field-inputs
            select.b-delivery-address__select.select2
              option Работа
              option Дом

      li.b-delivery-address__item
        .b-delivery-address__field
          .b-delivery-address__field-label Улица
          .b-delivery-address__field-inputs
            input.b-delivery-address__text-input(type="text" value="Ольховская")

      li.b-delivery-address__item
        .b-delivery-address__cols
          .b-delivery-address__col
            label.b-delivery-address__field
              .b-delivery-address__field-label Дом
              .b-delivery-address__field-inputs
                input.b-delivery-address__text-input(type="tel" value="45")

          .b-delivery-address__col
            .b-delivery-address__field
              .b-delivery-address__field-label Корпус
              .b-delivery-address__field-inputs
                input.b-delivery-address__text-input(type="tel")

          .b-delivery-address__col
            .b-delivery-address__field
              .b-delivery-address__field-label Квартира
              .b-delivery-address__field-inputs
                input.b-delivery-address__text-input(type="tel" value="8")

          .b-delivery-address__col
            .b-delivery-address__field
              .b-delivery-address__field-label Домофон
              .b-delivery-address__field-inputs
                input.b-delivery-address__text-input(type="tel" value="8")

      li.b-delivery-address__item
        .b-delivery-address__cols
          .b-delivery-address__col2
            label.b-delivery-address__field
              .b-delivery-address__field-label Индекс
              .b-delivery-address__field-inputs
                input.b-delivery-address__text-input(type="tel" value="404808")

          .b-delivery-address__col2
            .b-delivery-address__field
              .b-delivery-address__field-inputs.b-delivery-address__field-inputs_checkbox
                +checkbox('Есть лифт')(checked)

      li.b-delivery-address__item
        +checkbox('Сохранить этот адрес')

