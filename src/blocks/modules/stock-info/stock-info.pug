              li.b-stock-info__list-item 250 <span class="rub">i</span>&nbsp;&mdash; 3&ndash;4 дня, СДЭК
              li.b-stock-info__list-item 340 <span class="rub">i</span>&nbsp;&mdash; 2&ndash;4 дня, СПРС
