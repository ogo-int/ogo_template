extends ../layout/page-template

block head
	title Выбор жесткого диска

block head-scripts

block vars
	- var isInner = true; // раскрывать ли подменю в главном меню
	- var isTotalStyling = true; // Использовать бандл
	- var modHeader = '_breadcrumbs';

block caption
	h1.c-catalog__title Конфигуратор

block fix-area
	.c-catalog__fix-filter
		.c-catalog__filter-scroll.scroll-fixer
			+smart-filter()

block inner-content
	section.c-catalog
		.c-catalog__intro._full
			+promo-block2()(class="_collapsed")

		.c-catalog__sort
			+catalog-sort()

		.c-catalog__cols
			.c-catalog__right-aside
				.c-catalog__mobile-filters
					.c-catalog__btn-holder
						a.button.c-catalog__filter-btn(href="#")
							span Фильтры
							span.c-catalog__filter-btn-close Скрыть фильтры

					.c-catalog__mobile-sort
						span.c-catalog__label Сортировать по
						select.c-catalog__sort-select.select2()
							option Популярности
							option Новизне
							option Цене

				.c-catalog__filter
					.c-catalog__filter-scroll.scroll-fixer
						+smart-filter_config()

				.c-catalog__consult
					+online-consult()

			.c-catalog__main-col
				.c-catalog__products
					+catalog-plates_configurator()

				.c-catalog__pager
					+paginator()

				.c-catalog__more
					a.c-catalog__more-link.button-more(href="ajax/more-plates.html") Показать еще