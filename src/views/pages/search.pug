extends ../layout/page-template

block vars
	- var isInner = true; // раскрывать ли подменю в главном меню

block head
	title Страница поиска

block breadcrumbs

block caption

block fix-area
	.c-catalog__fix-filter
		.c-catalog__filter-scroll.scroll-fixer
			+smart-filter()

block inner-content
	section.c-search
		.c-search__caption
			span Результаты поиска по запросу:

		.c-search__input-holder
			input.c-search__input.js-autofocus(type="text" value="Карта")

		.c-search__tags
			.b-tags
				ul.b-tags__items
					li.b-tags__item
						a.b-tags__tag(href="") Дешёвые фотоаппараты
					li.b-tags__item
						a.b-tags__tag(href="") Фотоаппараты Canon
					li.b-tags__item
						a.b-tags__tag(href="") Фотоаппараты для новичков
					li.b-tags__item
						a.b-tags__tag.b-tags__tag_new(href="") Новинки
					li.b-tags__item
						a.b-tags__tag.b-tags__tag_discount(href="") Скидки

		.c-search__categories
			+search-slider()

	section.c-catalog
		.c-catalog__sort
			+catalog-sort()

		.c-catalog__cols
			.c-catalog__right-aside
				.c-catalog__mobile-filters
					.c-catalog__btn-holder
						a.button.c-catalog__filter-btn(href="#")
							span Фильтры
							span.c-catalog__filter-btn-close Скрыть фильтры

					.c-catalog__mobile-sort
						span.c-catalog__label Сортировать по
						select.c-catalog__sort-select.select2()
							option Популярности
							option Новизне
							option Цене

				.c-catalog__filter
					.c-catalog__filter-scroll.scroll-fixer
						+smart-filter()

				.c-catalog__consult
					+online-consult()

			.c-catalog__main-col
				.c-catalog__products
					+catalog-plates()

				.c-catalog__pager
					+paginator()

				.c-catalog__more
					a.c-catalog__more-link.button-more(href="ajax/more-plates.html") Показать еще